package = platform.winscard
depends = windows

compilerOpts = \
    -DUNICODE \
    -DWINVER=0x0601 \
    -D_WIN32_WINNT=0x0601 \
    -DWINAPI_FAMILY=3 \
    -DOEMRESOURCE \
    -Wno-incompatible-pointer-types \
    -Wno-deprecated-declarations

headers = windows.h \
    winscard.h

headerFilter = \
    winscard.h \
    winsmcrd.h \
    scarderr.h

noStringConversion = \
    SCardListReadersA \
    SCardListReadersW \
    SCardLocateCardsA \
    SCardLocateCardsW

linkerOpts = -lwinscard
